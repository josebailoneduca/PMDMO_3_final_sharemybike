<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ShareMyBike" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="materialButtonStyle">@style/botonPersonalizado</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorForeground">@color/primary</item>
    </style>

    <style name="Theme.ShareMyBike" parent="Base.Theme.ShareMyBike" />


    <style name="botonPersonalizado" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/boton</item>
        <item name="android:textColor">@color/buttonText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Surface">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>



</resources>



